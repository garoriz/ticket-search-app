    <style name="BackgroundCardView">
        <item name="cornerRadius">@dimen/x2</item>
        <item name="cardBackgroundColor">@color/grey3</item>
        <item name="strokeWidth">@dimen/x0</item>
    </style>

    <style name="DirectFlightsCardView">
        <item name="cornerRadius">@dimen/x2</item>
        <item name="cardBackgroundColor">@color/grey4</item>
        <item name="strokeWidth">@dimen/x0</item>
    </style>

    <style name="ForegroundSearchCardView">
        <item name="cornerRadius">@dimen/x2</item>
        <item name="cardBackgroundColor">@color/grey2</item>
        <item name="strokeWidth">@dimen/x0</item>
    </style>

    <style name="TextInputLayout">
        <item name="boxStrokeWidth">@dimen/x0</item>
        <item name="android:textColorHint">@color/grey6</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingStart">@dimen/x0</item>
        <item name="android:paddingEnd">@dimen/x0</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/size20</item>
        <item name="android:textColorHint">@color/grey6</item>
    </style>

    <style name="HorizontalRecyclerView" parent="">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VerticalRecyclerView" parent="">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="roundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/x2</item>
    </style>

    <style name="TransparentCardView" parent="">
        <item name="cardCornerRadius">@dimen/x0</item>
        <item name="strokeWidth">@dimen/x0</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="CustomRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/x1</item>
    </style>

    <style name="Divider" parent="">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="SelectedTownBtn" parent="">
        <item name="cornerRadius">@dimen/x6_25</item>
        <item name="backgroundTint">@color/grey3</item>
        <item name="textAllCaps">false</item>
        <item name="iconSize">@dimen/x2</item>
        <item name="android:paddingHorizontal">@dimen/x2</item>
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:paddingVertical">@dimen/x1</item>
