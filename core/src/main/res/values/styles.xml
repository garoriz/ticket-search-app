        <item name="strokeWidth">@dimen/x0</item>
    </style>

    <style name="SeeAllTicketsBtn" parent="">
        <item name="cornerRadius">@dimen/x1</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
