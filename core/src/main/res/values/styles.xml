        <item name="cardCornerRadius">@dimen/x1</item>
        <item name="cardBackgroundColor">@color/grey4</item>
        <item name="strokeWidth">@dimen/x0</item>
    </style>

    <style name="MaterialSwitch" parent="">
        <item name="thumbTint">@drawable/switch_thumb</item>
        <item name="trackTint">@drawable/switch_track</item>
    </style>
